generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Trip {
  id        String   @id
  userId    String
  name      String
  startDate DateTime
  endDate   DateTime
  days      Int
  position  Int
  events    Event[]
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@index([userId])
}

model Event {
  id      String  @id
  trip    Trip    @relation(fields: [tripId], references: [id], onDelete: Cascade)
  tripId  String
  placeId String?

  name       String
  cost       Float    @default(0)
  currency   Currency @default(USD)
  note       String?
  photo      String?
  photoAlbum Json

  address      String?
  phoneNumber  String?
  url          String?
  website      String?
  openingHours Json

  type      EventType @default(DEFAULT)
  position  Int
  date      DateTime
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
  createdBy String

  @@index([tripId])
}

enum Currency {
  USD
  PLN
}

enum EventType {
  DEFAULT
  FOOD
  TRANSPORT
  ACCOMMODATION
}
